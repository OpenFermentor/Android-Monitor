<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openfermentor.biomonitor"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="org.openfermentor.biomonitor.App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name="org.openfermentor.biomonitor.ui.experiment.view.ExperimentActivity"
            android:label="@string/experiment"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.DarkBlueStatusBar"
            />

        <activity
            android:name="org.openfermentor.biomonitor.ui.instruction.InstructionActivity"
            android:label="@string/instruction"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.DarkRedStatusBar"
            />

        <activity
            android:name="org.openfermentor.biomonitor.ui.main.view.MainActivity"
            android:label="@string/home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TranslucentStatusBar"
            />

        <activity
            android:name="org.openfermentor.biomonitor.ui.login.LoginActivity"
            android:label="@string/login"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TranslucentStatusBar"
            android:windowSoftInputMode="adjustPan"
            />

        <activity
            android:name="org.openfermentor.biomonitor.ui.StartActivity"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
